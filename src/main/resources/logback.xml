<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Added %thread for thread name -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Show Jetty server startup messages (includes port info) -->
    <logger name="org.eclipse.jetty.server.AbstractConnector" level="INFO"/>
    <logger name="org.eclipse.jetty.server" level="DEBUG"/>
    <logger name="org.eclipse.jetty.servlet" level="DEBUG"/>
    <logger name="org.eclipse.jetty.RequestLog" level="INFO" additivity="false">
        <appender-ref ref="REQUEST_LOG"/>
    </logger>

    <!-- Suppress other Jetty logs -->
    <logger name="org.eclipse.jetty" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>